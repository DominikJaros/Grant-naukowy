<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".miazdzyca">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/gradient_blue" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="72dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="158dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/logo_iczmp" />

        <ImageView
            android:id="@+id/btBack"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_arrow_back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:text="Miażdżyca - przyczyny, objawy i leczenie miażdżycy"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="573dp"
        android:layout_marginTop="30dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="5dp"
                android:showText="true"
                android:textOn="Tak"
                android:textOff="Nie"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:text="Czy pacjent choruje na nadwagę, otyłość?" />

            <Switch
                android:id="@+id/switch2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="5dp"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:showText="true"
                android:textOn="Tak"
                android:textOff="Nie"
                android:text="Czy pacjent pali papierosy?" />
            <Switch
                android:id="@+id/switch3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="5dp"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:showText="true"
                android:textOn="Tak"
                android:textOff="Nie"
                android:text="Czy pacjent choruje na nadciśnienie tętniczne?" />
            <Switch
                android:id="@+id/switch4"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="5dp"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:showText="true"
                android:textOn="Tak"
                android:textOff="Nie"
                android:text="Czy pacjent choruje na cukrzyce?" />
            <Switch
                android:id="@+id/switch5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="5dp"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:showText="true"
                android:textOn="Tak"
                android:textOff="Nie"
                android:text="Czy pacjent ma wysoki poziom cholesterolu?" />

            <Button
                android:id="@+id/btDiagnozuj"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:background="@drawable/button_radius"
                android:layout_marginTop="100dp"
                android:layout_marginStart="80dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Diagnozuj" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>